{
    "name": "joomla/view",
    "type": "joomla-package",
    "description": "Joomla View Package",
    "keywords": ["joomla", "framework", "view"],
    "homepage": "https://github.com/joomla-framework/view",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^8.1.0"
    },
    "require-dev": {
        "joomla/renderer": "3.0.x-dev",
        "phpunit/phpunit": "^9.5.28",
        "squizlabs/php_codesniffer": "^3.7.2",
        "phpstan/phpstan": "^1.10.7",
        "phan/phan": "^5.4.2"
    },
    "suggest": {
        "joomla/renderer": "Required to use Joomla\\View\\BaseHtmlView"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\View\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\View\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-2.0-dev": "2.0-dev",
            "dev-3.x-dev": "3.x-dev"
        }
    }
}
