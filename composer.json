{
    "name": "joomla/view",
    "type": "joomla-package",
    "description": "Joomla View Package",
    "keywords": ["joomla", "framework", "view"],
    "homepage": "https://github.com/joomla-framework/view",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "~8.1.0"
    },
    "require-dev": {
        "joomla/renderer": "^2.0",
        "phpunit/phpunit": "^8.5|^9.0",
        "squizlabs/php_codesniffer": "~3.7.1"
    },
    "suggest": {
        "joomla/renderer": "Required to use Joomla\\View\\BaseHtmlView"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\View\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\View\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-2.0-dev": "2.0-dev",
            "dev-3.x-dev": "3.0-dev"
        }
    }
}
